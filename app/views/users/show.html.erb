


<script id="search_result_template" type="text/x-handlebars-template">
{{#each search_results}}
<a class="list-group-item" href="/users/<%= current_user.id %>/edit?gym[name]={{name}}&gym[address]={{location.address}}&gym[yelp_id]={{id}}">{{name}}</a>
{{/each}}
</script>


<nav class="navbar navbar-default navbar-static-top">
  <div class="container">
    <div class="navbar-header">
      <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#navbar" aria-expanded="false" aria-controls="navbar">
        <span class="sr-only">Toggle navigation</span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
      </button>

      <div class="icon">
        <img src="/assets/fitness1.svg" alt="">
      </div>
      <div class="spotter">
        Spotter
      </div>

    </div>
    <div id="navbar" class="navbar-collapse collapse">
      <ul class="nav navbar-nav">
        <li><a href="#">Profile</a></li>
        <li><a href="#about">Matches</a></li>
        <li><a href="#contact">Gyms</a></li>
      </ul>
      <ul class="nav navbar-nav navbar-right">
        <li> <img class="profile_thumbnail" src="http://graph.facebook.com/<%= current_user.uid %>/picture?type=large" alt="Profile Picture"></li>
        <li class="dropdown">
          <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-expanded="false"><%= current_user.first_name %> <%= current_user.last_name %> <span class="caret"></span></a>
          <ul class="dropdown-menu" role="menu">
            <li><a href="#">Edit Profile</a></li>
            <li><a href="#">Settings</a></li>
            <li><a href="/logout">Sign Out</a></li>
          </ul>
        </li>
      </ul>
    </div><!--/.nav-collapse -->
  </div>
</nav>

<% if current_user.gyms.count == 0 %>

<div class="search container">
  <div class="row">
    <div class="col-md-12">
      <div class="input-group">
        <input type="text" class="form-control" placeholder="Search for gyms...">
        <span class="input-group-btn">
          <button class="btn btn-default" type="button">Search</button>
        </span>
      </div>
    </div>
  </div>
</div>

<div class="container">
  <div class="row">
    <div class="col-md-6 col-md-offset-3">
      <div class="panel panel-default">
        <div class="panel-heading">
          <h3 class="panel-title">Gyms near you</h3>
        </div>
        <div class="near_you_results list-group">
          <a href="#" class="list-group-item">Searching...</a>
        </div>

      </div>
    </div>
  </div>
</div>

<% else %>

<div class="container">
  <div class="row">
    <div class="col-md-3">
      <div class="panel panel-default">
        <div class="panel-heading">
          <h3 class="panel-title"><%= current_user.gyms.first.name %></h3>
        </div>
        <div class="panel-body">
          <%= current_user.gyms.first.address %>
        </div>
      </div>
    </div>
        <% @all_users.each do |user| %>
        <% unless user.id == current_user.id %>
    <div class="col-md-6">
        <div class="member_container outline">
          <img src="<%= user.thumbnail_link %>" alt="">
          <h3><%= user.first_name %></h3>

          <div class="text-left">
            <div class="panel panel-default">
              <div class="panel-heading"><%= user.gyms.first.name %></div>
              <div class="panel-body">
                Panel content
              </div>
            </div>
          </div>

          <button class="no choice btn btn-danger">
            <div class="glyphicon glyphicon-remove"></div>
          </button>
          <button class="yes choice btn btn-success">
            <div class="glyphicon glyphicon-ok"></div>
          </button>



        </div>
    </div>
        <% end %>
        <% end %>
  </div>
</div>
</div>




<% end %>
